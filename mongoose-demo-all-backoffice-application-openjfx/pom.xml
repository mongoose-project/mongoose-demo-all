    <!-- Making the jar file executable with its associated lib directory -->

    <properties>
        <!-- disabling classes-dependencies unpack to avoid including them again in the jar -->
        <plugin.dependency.param.unpack-classes.phase>none</plugin.dependency.param.unpack-classes.phase>

        <plugin.javapackager.name>MongooseBackOffice</plugin.javapackager.name>
        <plugin.javapackager.displayName>Mongoose Back-Office</plugin.javapackager.displayName>
    </properties>

    <build>
        <plugins>
            <!-- This plugin must be ran explicitly by invoking mvn javafx:jlink -->
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <!-- profile to make a fat standalone executable jar with all dependent libraries included inside -->
        <profile>
            <id>openjfx-fatjar</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>

            <build>
                <plugins>

                    <!-- Calling Shade with the configuration defined in the parent pom -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-shade-plugin</artifactId>
                    </plugin>

                </plugins>
            </build>
        </profile>

        <profile>
            <id>javapackager</id>

            <build>
                <plugins>

                    <plugin>
                        <groupId>io.github.fvarrui</groupId>
                        <artifactId>javapackager</artifactId>
                    </plugin>

                </plugins>
            </build>
        </profile>

        <!-- profile to make a non fat standalone executable jar with all dependent libraries unpacked in lib folder -->
        <profile>
            <id>openjfx-nonfatjar</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>

            <build>
                <plugins>

                    <!-- Setting the main class and classpath in the manifest file to make it executable (with java -jar) -->
                    <plugin>
                        <artifactId>maven-jar-plugin</artifactId>
                        <configuration>
                            <archive>
                                <manifest>
                                    <mainClass>${webfx.mainClass}</mainClass>
                                    <addClasspath>true</addClasspath>
                                    <classpathPrefix>lib/</classpathPrefix>
                                </manifest>
                            </archive>
                        </configuration>
                    </plugin>

                    <!-- Unpacking all dependent libraries in the lib folder -->
                    <plugin>
                        <artifactId>maven-dependency-plugin</artifactId>
                    </plugin>

                </plugins>
            </build>
        </profile>

        <!-- Profile to minimize and obfuscate the jar file with Proguard -->
        <profile>
            <id>openjfx-minjar</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>

            <build>
                <plugins>

                    <!-- Calling Proguard with the configuration defined in the parent pom -->
                    <plugin>
                        <groupId>com.github.wvengen</groupId>
                        <artifactId>proguard-maven-plugin</artifactId>
                    </plugin>

                </plugins>
            </build>
        </profile>

    </profiles>

